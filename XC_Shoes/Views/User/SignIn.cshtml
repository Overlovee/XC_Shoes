
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="sign-form">
    <div class="form-header">
        <svg id="logo-nike" viewBox="0 0 24 24" width="60px" height="60px">
            <path d="M 7 6 L 9 6 L 11 9 L 11 11 L 9 14 L 7 14 L 10 10 L 10
                      10 L 7 6 m 11 1 L 20 7 L 20 6 L 18 6 C 13 6 13 14 18 14
                      L 20 14 L 20 13 L 18 13 C 15 12 15 8 18 7 M 21 13 C 21
                      13 21 12 22 13 C 19 10 19 15 23 14 C 24 13 22 12 22 11 C
                      22 11 24 12 23 12 C 24 12 23 11 21 10 C 24 14 21 14 21 13
                      M 11 9 L 13 6 L 15 6 L 12 10 L 12 10 L 15 14 L 13 14 L 11 11">
            </path>
        </svg>
        @*<svg id="logo-nike" viewBox="0 0 24 24" width="60px" height="60px">
            <path d="M21 8.719L7.836 14.303C6.74 14.768 5.818 15 5.075 15c-.836 0-1.445-.295-1.819-.884-.485-.76-.273-1.982.559-3.272.494-.754 1.122-1.446 1.734-2.108-.144.234-1.415 2.349-.025 3.345.275.2.666.298 1.147.298.386 0 .829-.063 1.316-.19L21 8.719z">
            </path>
        </svg>*@
        <h3 class="form-header-tile">YOUR ACCOUNT FOR EVERYTHING NIKE</h3>
    </div>
    <form action="#" id="form-sign-in" method="get">
        <div class="form-group">
            <input id="email-signin" type="text" placeholder="Email address" name="emailSignin">
            <span class="form-message"></span>
        </div>
        <div class="form-group">
            <input id="password-signin" type="password" placeholder="Password" name="passwordSignin">
            <span class="form-message"></span>
        </div>
        <div class="form-about-sign-in">
            <div class="check-box">
                <input type="checkbox" checked id="keep-sign-in" value="keep-sign-in">
                <label for="">Keep me sign in</label>
            </div>
            <a href="#" id="forgot-password" style="float: right;">Forgotten your password?</a>
            <div style="clear: both;"></div>
        </div>
        <div class="form-about-legacy">
            <p>
                By logging in, you agree to
                Nike's <a href="./policy.html">Privacy Policy</a>
                and <a href="/term-of-uses.html">Terms of Use</a>.
            </p>
        </div>
        <div class="submit">
            <button id="signin-btn">Sign in</button>
        </div>
        <div class="not-a-member">
            <p>Not a Member? <a href="@Url.Action("SignUp", "User")">Join Us.</a></p>
        </div>
    </form>
</div>

